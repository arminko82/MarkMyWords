{
  "manifest_version": 2,
  "name": "Mark My Words",
  "version": "0.10",
  "description": "Highlights all occurences of the current text selection.",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_page": "index.html"
}
